
@{
    ViewBag.Title = "Chat";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@Styles.Render("~/Content/Chat.css")

@*<h2 id="Title">Chat</h2>*@
<div id="chat" class="container">
    <ul id="discussion"></ul>
    <ul id="online_list">
        <li id="online_list_header">Users Online</li>
    </ul>
    <input type="text" id="message" placeholder="Enter message here..." />
    <input type="button" id="sendmessage" class="btn btn-default" value="Send" />
    <input type="hidden" id="displayname" />
</div>
@section scripts {
    <!--Script references. -->
    <!--The jQuery library is required and is referenced by default in _Layout.cshtml. -->
    <!--Reference the SignalR library. -->
    <script src="~/Scripts/jquery.signalR-2.2.1.min.js"></script>
    <!--Reference the autogenerated SignalR hub script. -->
    <script src="~/signalr/hubs"></script>
    <!--SignalR script to update the chat page and send messages.-->
    <script src="~/Scripts/updatechat.js"></script>
    <script>
        function keypressHandler(e) {
            if (e.which == 13) {
                e.preventDefault(); //stops default action: submitting form
                $(this).blur();
                $('#sendmessage').focus().click();//give your submit an ID

                //$('#discussion').scrollTop($('#discussion')[0].scrollHeight);
                $('#discussion').animate({ scrollTop: $('#discussion').prop("scrollHeight") }, 0);
            }
        }
        $('#message').keypress(keypressHandler);

    </script>

}